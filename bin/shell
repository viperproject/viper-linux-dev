#!/bin/bash

DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )
source "$DIR/settings.sh"

${DOCKER_COMMAND} \
  -m 1500m \
  -e DISPLAY=$DISPLAY \
  -e "BOOGIE_EXE=/usr/bin/boogie" \
  -e "Z3_EXE=/usr/bin/z3" \
  -v /tmp/.X11-unix:/tmp/.X11-unix \
  -v "$(pwd)/workspace:${DOCKER_HOME}" \
  -v "$(pwd):${DOCKER_SOURCE_DIR}" \
  "${DOCKER_IMAGE}" /usr/bin/fish
